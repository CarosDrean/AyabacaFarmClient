<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragments.Profiles">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="20dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/name_title"
                android:text="@string/name"
                android:textSize="18sp"
                android:textColor="@color/negro"
                android:textStyle="bold"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/name_p"
                android:layout_marginTop="5dp"
                android:textSize="16sp"
                android:text="@string/name"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/linea"/>

        <android.support.design.chip.Chip
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/address_p"
            android:padding="10dp"
            android:layout_margin="15dp"
            android:text="@string/address"
            android:textStyle="normal"
            app:chipIconEnabled="true"
            app:iconStartPadding="5dp"
            app:chipIcon="@drawable/ic_icons8_casa"
            style="@style/Widget.MaterialComponents.ChipGroup"/>

        <android.support.design.chip.Chip
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/cel_p"
            android:padding="10dp"
            android:layout_marginStart="15dp"
            android:text="@string/holder_phone"
            android:textStyle="normal"
            app:chipIconEnabled="true"
            app:iconStartPadding="5dp"
            app:chipIcon="@drawable/ic_icons8_contactos"
            style="@style/Widget.MaterialComponents.ChipGroup"/>

    </LinearLayout>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fab_profile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_margin="@dimen/fab_margin"
        app:srcCompat="@drawable/ic_icons8_editar" />
</FrameLayout>